<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="com.example.storescontrol.bean.LoginBean"/>
    </data>
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".IndexActivity">
        <include
            android:id="@+id/l_title"
            layout="@layout/layout_title"/>
        <RelativeLayout
            android:background="@color/black"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/l_info"
            android:layout_below="@id/l_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_username"
                    style="@style/textview"
                    />
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_accname"
                    android:text="@{user.accname}"
                    style="@style/textview"/>
                <LinearLayout
                    style="@style/line"></LinearLayout>
            </LinearLayout>
            <Button

                android:layout_centerVertical="true"
                android:id="@+id/b_exit"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="退出"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/l_bottom"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button

                android:gravity="center"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/ic_index"
                android:layout_weight="1"
                android:text="首页"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/ic_my"
                android:layout_weight="1"
                android:text="我的"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <RelativeLayout
            android:layout_above="@id/l_bottom"
            android:layout_below="@id/l_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                style="@style/line"
                android:layout_alignParentBottom="true"
                ></LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_function"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>
</layout>