<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
<data>

</data>
    <RelativeLayout
        android:id="@+id/l_input"
        android:orientation="horizontal"
        android:layout_margin="@dimen/layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@mipmap/ic_round"
            android:id="@+id/tv_number"
            android:text="1"
            android:src="@mipmap/ic_picture"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <CheckBox

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_rember"
            android:id="@+id/cb_select"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_toRightOf="@id/tv_number"
            android:layout_toLeftOf="@id/cb_remember"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cinvname"

                    android:text="品名"
                    style="@style/item_small"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_irowno"
                    style="@style/item_small"
                    android:text="行号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_bWhPos"
                    style="@style/item_small"
                    android:text="库号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_cinvcode"
                    style="@style/item_small"
                    android:text="料号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_cbatch"
                    style="@style/item_small"
                    android:text="批号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                   android:layout_weight="1"
                    android:id="@+id/tv_iquantity"
                    style="@style/item_small"
                    android:text="数量"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cinvstd"
                    style="@style/item_small"
                    android:text="规格型号"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>