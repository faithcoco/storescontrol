<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/l_input"
        android:orientation="horizontal"
        android:layout_margin="@dimen/layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@mipmap/ic_round"
            android:id="@+id/tv_tag"
            android:text="1"
            android:src="@mipmap/ic_picture"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cWhName"

                    android:text="仓库："
                    style="@style/item_small"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cPosName"
                    style="@style/item_small"
                    android:text="货位："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/tv_cInvName"
                    style="@style/item_small"
                    android:text="品名："
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/tv_cInvCode"
                    style="@style/item_small"
                    android:text="料号："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cBatch"
                    style="@style/item_small"
                    android:text="批号："
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_iQuantity"
                    style="@style/item_small"
                    android:text="数量："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_cInvStd"
                style="@style/item_small"
                android:text="规格型号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </LinearLayout>
</layout>